<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordleProject.SettingPage"
             Title="SettingPage"
              BackgroundColor="{Binding BackgroundColor}">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Music" TextColor="White" FontSize="20"/>
            <Button x:Name="MusicOnOff" Clicked="MusicOnOff_Clicked"/>
        </HorizontalStackLayout>
        <Button Text="Toggle Timer" x:Name="TimerToggle" Clicked="TimerToggle_Clicked"/>
        <Button x:Name="Return" Clicked="Return_Clicked" Text="Exit"/>
    </VerticalStackLayout>
</ContentPage>